<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_circel"
    android:gravity="center_horizontal"
    tools:context=".Score">

    <!-- Image de profil circulaire -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="303dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/imag1"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="5dp"
        tools:ignore="MissingClass" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        android:text="Votre score :"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/score_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="5"
        android:progress="0"
        android:progressTint="#3DB74E"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/percentage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:text="nom du joueur"
        android:textColor="#3DB74E"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnAfficherJoueurs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afficher les joueurs"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:backgroundTint="#657BED"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"/>



    <Button
        android:id="@+id/btn_show_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Afficher les joueurs triÃ©s"
        android:backgroundTint="#3F51B5"
        android:textSize="15sp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_try_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recommencer"
            android:backgroundTint="#10B981"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quitter"
            android:backgroundTint="#EF4444"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>


</LinearLayout>