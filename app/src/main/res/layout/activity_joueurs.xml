<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/back_registre"
    tools:context=".JoueursActivity">

    <!-- Espace pour dÃ©placer le contenu vers le bas -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liste_des_joueurs"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#657BED"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="12dp" />

    <!-- RecyclerView dans un layout avec poids -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_joueurs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/liste_des_joueurs" />

    <!-- Bouton toujours visible -->
    <Button
        android:id="@+id/btn_retour_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />
</LinearLayout>
